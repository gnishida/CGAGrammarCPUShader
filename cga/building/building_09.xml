<?xml version="1.0"?>
<rules>
	<attr name="building_height" value="6" range="3,9"/>
	<attr name="building_base_x" value="0.3" range="0.25,0.35"/>
	<attr name="building_base_y" value="0.5" range="0.35,0.7"/>
	
	<rule name="Start">
		<split splitAxis="x">
			<param type="relative" value="building_base_x" name="Start2"/>
			<param type="relative" value="1-building_base_x*2" name="Base"/>
			<param type="relative" value="building_base_x" name="Start2"/>
		</split>
	</rule>
	<rule name="Start2">
		<split splitAxis="y">
			<param type="relative" value="1-building_base_y" name="NIL"/>
			<param type="relative" value="building_base_y" name="Base"/>
		</split>
	</rule>
	<rule name="Base">
		<extrude height="building_height"/>
	</rule>
</rules>